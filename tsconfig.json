{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables":false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "checkJs": false,
    "noImplicitThis": false,
    "experimentalDecorators": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "paths": {
      "@mock/*": ["src/mock/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@api/*": ["src/api/*"],
      "@server/*": ["src/server/*"],
      "~@styles/*": ["src/styles/*"]
    },
    "baseUrl": "./"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "src",
    "**/*.tsx",
    "**/*.ts",
    "**/*.scss",
    "**/*.jsx",
    "**/*.js",
    "**/*.wasm",
    "public/wasmLib"
, ".prettierrc", "src/mock","src/styles","src/api"  ],
  "exclude": ["./editorTarget/", "./public/"]
}
